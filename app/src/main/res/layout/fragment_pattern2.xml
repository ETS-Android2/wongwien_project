<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.show_review.Pattern2Fragment">


    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgPerson"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/person_icon"
                app:civ_border_color="@color/primary"
                app:civ_border_width="2dp" />

            <LinearLayout
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary"/>
                <TextView
                    android:id="@+id/txtEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="xxxx@gmail.com"
                    android:textSize="10sp"
                    android:textColor="@color/primary"/>
                <TextView
                    android:id="@+id/txtTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12/20/21 20:21AM"
                    android:textSize="8sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_gravity="end"
                android:gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:background="@drawable/rec_corner_left_background_app"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:id="@+id/txtPoint"
                    android:text="0"/>
                <ImageView
                    android:layout_marginStart="5dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_star_white"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/r_title"
                android:padding="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="this is a title"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/reviewTitle"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/backgroundApp">
                <ImageView
                    android:id="@+id/r_image0"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:src="@drawable/image_icon"/>
            </LinearLayout>

            <TextView
                android:padding="20dp"
                android:id="@+id/r_desc0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="this is description ................"
                android:textColor="@color/reviewDescrip"
                android:textSize="14sp"/>

        </LinearLayout>
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroup"
            android:paddingTop="10dp"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:duplicateParentState="false">

            <!--                <com.google.android.material.chip.Chip-->
            <!--                    android:layout_width="wrap_content"-->
            <!--                    android:layout_height="wrap_content"-->
            <!--                    android:visibility="visible"-->
            <!--                    android:text="helllo"/>-->
        </com.google.android.material.chip.ChipGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="end"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnUp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:background="@color/white"
                android:src="@drawable/ic_up_secound_primary" />

            <ImageButton
                android:id="@+id/btnDown"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:background="@color/white"
                android:src="@drawable/ic_down_secound_primary" />

            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:background="@color/white"
                android:src="@drawable/ic_share_secound_primary" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>