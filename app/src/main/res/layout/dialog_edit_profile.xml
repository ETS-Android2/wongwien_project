<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layoutEdName"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/background_dialog_edit_profile"
            android:layout_height="70dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit Name"
                android:textSize="20sp"
                android:textColor="@color/primary"
                android:gravity="center"
                android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layoutEdProfile"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/background_dialog_edit_profile"
            android:layout_height="70dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit Profile"
                android:textSize="20sp"
                android:textColor="@color/primary"
                android:gravity="center"
                android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layoutEdProfileCover"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:background="@drawable/background_dialog_edit_profile"
            android:layout_height="70dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit Profile Cover"
                android:textSize="20sp"
                android:textColor="@color/primary"
                android:gravity="center"
                android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layoutAddReview"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:background="@drawable/background_dialog_edit_profile"
            android:layout_height="70dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Review"
                android:textSize="20sp"
                android:textColor="@color/primary"
                android:gravity="center"
                android:layout_gravity="center"/>
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>